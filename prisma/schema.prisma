generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}
datasource db {
  provider = "postgresql"
}

enum ReportStatus {
  RESOLVED
  PENDING
  IN_PROGRESS
  ARCHIVED    // For duplicate Reports
}

model User {
  id        String   @id @default(cuid())
  fullName  String
  address   String
  password  String
  createdAt DateTime @default(now())
  contactNo String   @unique 

  activities Activity[]
  comments  Comment[]
  upvotes   Upvote[]

  reports   Report[]

  @@map("users")
}

model Report {
  id          String       @id @default(cuid())
  title       String
  description String?
  imageUrl    String      // Now supports array of image URLs (JSON)
  latitude    Float
  longitude   Float
  status      ReportStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  creatorId      String @map("userId")
  upvotes    Int          @default(0)
  
  // Deduplication fields
  isDuplicate      Boolean  @default(false)
  parentReportId    String?  // Reference to original Report if this is a duplicate
  mergedReportIds   String[] @default([]) // Array of Report IDs that were merged into this one

  creator        User         @relation(fields: [creatorId], references: [id])
  activities     Activity[]
  comments       Comment[]
  userUpvotes    Upvote[]
  parentReport    Report?       @relation("ReportDuplicates", fields: [parentReportId], references: [id])
  duplicates     Report[]      @relation("ReportDuplicates")

  @@index([latitude, longitude])
  @@index([isDuplicate])

  @@map("reports")
}

model Activity {
  id         String   @id @default(uuid())
  reportId    String
  report      Report    @relation(fields: [reportId], references: [id])
  type       String   // EX: "CREATED", "COMMENT_ADDED", "STATUS_UPDATED"
  message    String?
  createdAt  DateTime @default(now())
  createdBy  User?    @relation(fields: [createdById], references: [id])
  createdById String?

  @@map("activities")
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  reportId   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  report     Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@map("comments")
}

model Upvote {
  id        String   @id @default(uuid())
  reportId   String
  report     Report    @relation(fields: [reportId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([reportId, userId])
  @@map("upvotes")
}
