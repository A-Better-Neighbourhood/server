generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}
datasource db {
  provider = "postgresql"
}

enum ReportStatus {
  RESOLVED
  PENDING
  IN_PROGRESS
  ARCHIVED    // For duplicate Reports
}

enum UserRole {
  USER       // Regular citizen
  AUTHORITY  // Municipal authority staff
  ADMIN      // System administrator
}

enum ActorType {
  USER       // Regular user actions
  AUTHORITY  // Municipal authority actions
  SYSTEM     // Automated system actions
}

model User {
  id        String   @id @default(cuid())
  fullName  String
  address   String
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  contactNo String   @unique

  activities Activity[]
  upvotes   Upvote[]
  reports   Report[]

  @@map("users")
}

enum ReportCategory {
  ROAD_ISSUE
  GARBAGE
  STREET_LIGHT
  WATER_LEAK
  NOISE_COMPLAINT
  OTHER
}

model Report {
  id          String       @id @default(cuid())
  title       String
  description String?
  imageUrl    String[]
  latitude    Float
  longitude   Float
  status      ReportStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  creatorId   String @map("userId")

  category   ReportCategory

  // De-duplication fields
  isDuplicate      Boolean   @default(false)
  originalReportId String?   // Points to the original report if this is a duplicate
  duplicateCount   Int       @default(0) // Count of duplicates merged into this report
  mergedAt         DateTime? // When this report was marked as duplicate

  creator        User         @relation(fields: [creatorId], references: [id])
  activities     Activity[]
  userUpvotes    Upvote[]
  
  // Self-referential relationship for duplicates
  originalReport Report?  @relation("ReportDuplicates", fields: [originalReportId], references: [id], onDelete: SetNull)
  duplicates     Report[] @relation("ReportDuplicates")
  
  @@index([latitude, longitude])
  @@index([originalReportId])
  @@index([isDuplicate, status])

  @@map("reports")
}

enum ActivityType {
  REPORT_CREATED           // System: Report was created
  USER_COMMENTED          // User: Regular user added a comment
  AUTHORITY_COMMENTED     // Authority: Official comment from municipal authority
  STATUS_UPDATED          // Authority: Report status changed
  DUPLICATE_MERGED        // System: Duplicate report was merged
  MARKED_RESOLVED         // Authority/User: Report marked as resolved
  MARKED_AS_DUPLICATE     // System: Report marked as duplicate
  UPVOTE_MILESTONE        // System: Report reached upvote milestone (10, 50, 100, etc.)
}

model Activity {
  id          String       @id @default(uuid())
  reportId    String
  report      Report       @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  type        ActivityType
  actorType   ActorType    @default(USER)
  
  // Content fields (used for comments and messages)
  content     String?      // Comment text or activity message
  images      String[]     @default([]) // Image URLs for comments
  
  // Metadata
  createdAt   DateTime     @default(now())
  createdBy   User?        @relation(fields: [createdById], references: [id])
  createdById String?
  
  // For status updates
  oldStatus   String?
  newStatus   String?

  @@index([reportId, createdAt])
  @@map("activities")
}

model Upvote {
  id        String   @id @default(uuid())
  reportId   String
  report     Report    @relation(fields: [reportId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([reportId, userId])
  @@map("upvotes")
}
