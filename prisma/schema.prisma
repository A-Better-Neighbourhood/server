generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}
datasource db {
  provider = "postgresql"
}

enum ReportStatus {
  RESOLVED
  PENDING
  IN_PROGRESS
  ARCHIVED    // For duplicate Reports
}

model User {
  id        String   @id @default(cuid())
  fullName  String
  address   String
  password  String
  createdAt DateTime @default(now())
  contactNo String   @unique 

  activities Activity[]
  comments  Comment[]
  upvotes   Upvote[]

  reports   Report[]

  @@map("users")
}

enum ReportCategory {
  ROAD_ISSUE
  GARBAGE
  STREET_LIGHT
  WATER_LEAK
  NOISE_COMPLAINT
  OTHER
}

model Report {
  id          String       @id @default(cuid())
  title       String
  description String?
  imageUrl    String[]
  latitude    Float
  longitude   Float
  status      ReportStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  creatorId   String @map("userId")

  category   ReportCategory

  // De-duplication fields
  isDuplicate      Boolean   @default(false)
  originalReportId String?   // Points to the original report if this is a duplicate
  duplicateCount   Int       @default(0) // Count of duplicates merged into this report
  mergedAt         DateTime? // When this report was marked as duplicate

  creator        User         @relation(fields: [creatorId], references: [id])
  activities     Activity[]
  comments       Comment[]
  userUpvotes    Upvote[]
  
  // Self-referential relationship for duplicates
  originalReport Report?  @relation("ReportDuplicates", fields: [originalReportId], references: [id], onDelete: SetNull)
  duplicates     Report[] @relation("ReportDuplicates")
  
  @@index([latitude, longitude])
  @@index([originalReportId])
  @@index([isDuplicate, status])

  @@map("reports")
}

enum ActivityType {
  CREATED
  COMMENT_ADDED
  AUTHORITY_COMMENTED
  STATUS_UPDATED
  ADDED_DUPLICATE
  MARKED_RESOLVED
  MARKED_AS_DUPLICATE
}

model Activity {
  id         String   @id @default(uuid())
  reportId    String
  report      Report    @relation(fields: [reportId], references: [id])
  type       ActivityType
  message    String?
  createdAt  DateTime @default(now())
  createdBy  User?    @relation(fields: [createdById], references: [id])
  createdById String?

  @@map("activities")
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  reportId   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  report     Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@map("comments")
}

model Upvote {
  id        String   @id @default(uuid())
  reportId   String
  report     Report    @relation(fields: [reportId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([reportId, userId])
  @@map("upvotes")
}
